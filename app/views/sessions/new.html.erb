<% provide(:title, "Login") %>

<div class="row">
	<div class="span6 offset3">
		<div class="login-form span5" >
		<%= form_for(:session, url: sessions_path) do |f| %>

		<div class="control-group">
			<label class="login-field-icon fui-mail-16" for="login-name"></label>
			<%= f.text_field :email, :placeholder =>"Escribe tu email" %>
		</div>
		<div class="control-group">
			<label class="login-field-icon fui-lock-16" for="login-name"></label>
			<%= f.password_field :password, :placeholder =>"Escribe tu password" %>
		</div>

		<%= f.submit "Login", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>Eres nuevo <%= link_to "Registrate!", "/" %></p>
	</div>
	</div>
</div>